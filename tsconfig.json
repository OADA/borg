{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
